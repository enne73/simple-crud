<div class="container">
  <div class="text-right">
    <a href="/users/add" class="btn btn-sm btn-light"><i class="fas fa-plus"></i> nuovo utente</a>
  </div>
  <div>
    <br/>
    <br/>
    <table class="table table-hover  w-100 ">
      <thead>
        <tr>
          <th scope="col">nome e cognome</th>
          <th scope="col">e-mail</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr data-href="/users/update/{{_id}}">
            <td scope="row">{{name.first}} {{name.last}}</td>
            <td scope="row">{{email}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
