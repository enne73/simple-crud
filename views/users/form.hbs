<div class="container">
  <div class="form-group text-right">
    <a href="#" class="btn btn-sm btn-light"><i class="fas fa-search"></i></a>
    {{#if user._id}}
      <a href="#" class="btn btn-sm btn-light"><i class="fas fa-plus"></i></a>
      <a href="#" class="btn btn-sm btn-light"><i class="far fa-trash-alt"></i></a>
    {{/if}}
    <div class="text-muted small"><br/>{{user._id}}</div>
  </div>
  <form action="/users/persist" method="POST" class="clearfix">
    <input type="hidden" name="_id" value="{{user._id}}" />
    <div class="form-group">
      <label for="first">nome</label>
      <input type="text" class="form-control" id="first" name="first" value="{{user.name.first}}" autofocus/>
    </div>
    <div class="form-group">
      <label for="apellidos">cognome</label>
      <input type="text" class="form-control" id="last" name="last" value="{{user.name.last}}" />
    </div>
    <div class="form-group">
      <label for="e-mail">e-mail</label>
      <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" />
    </div>
    <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-check"></i></button>
  </form>
</div>
